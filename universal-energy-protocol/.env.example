# .env.example

# ---- Node.js/Hardhat/Foundry Environment Variables ----

# Private key for deployer/admin (NEVER COMMIT .env!)
PRIVATE_KEY=your_private_key_here

# Etherscan, BscScan, PolygonScan, etc. API keys (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key
BSCSCAN_API_KEY=your_bscscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Infura, Alchemy, QuickNode, or custom RPC URLs
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_KEY
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY
BSC_RPC_URL=https://bsc-dataseed.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com/

# Codecov token for coverage reporting
CODECOV_TOKEN=your_codecov_token

# Custom contract addresses (for test integrations)
ENERGY_CONTRACT_ADDR=0xYourEnergyContractAddress
STAKING_TOKEN_ADDR=0xYourStakingTokenAddress
NFT_CONTRACT_ADDR=0xYourNFTContractAddress

# DAO governance multi-sig address
DAO_MULTISIG_ADDR=0xYourDAOMultisigAddress

# Security contact
SECURITY_EMAIL=security@s470shi.org

# ---- Never commit .env or .env.* files! ----
